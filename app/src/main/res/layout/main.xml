<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Settings -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.41"
        android:background="#505050"
        android:tag="configure block">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:inputType="none"
                android:text="Block Addr:"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ebBlockAddr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.10"
                android:autoText="true"
                android:background="#708070"
                android:editable="false"
                android:ems="10"
                android:inputType="number"
                android:numeric="integer" />

            <TextView
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="Device type:"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ebDeviceType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.10"
                android:autoText="true"
                android:background="#708070"
                android:editable="false"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/editText5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="Card Id (SAK)"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ebTagId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.10"
                android:autoText="true"
                android:background="#708070"
                android:editable="false"
                android:ems="10"
                android:inputType="number" />

        </LinearLayout>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="184dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:weightSum="1">


            <Button
                android:id="@+id/btnOpen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/button_pattern"
                android:gravity="center"
                android:scaleType="centerInside"
                android:text="Open Device"
                android:layout_weight="0.2" />

            <Button
                android:id="@+id/btnDeviceType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/button_pattern"
                android:gravity="center"
                android:scaleType="centerInside"
                android:text="Read Device Type"
                android:layout_weight="0.2" />

            <Button
                android:id="@+id/btnTagId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="0.2"
                android:background="@drawable/button_pattern"
                android:gravity="center"
                android:scaleType="centerInside"
                android:text="Get Card Id" />

            <Button
                android:id="@+id/btnBlockRead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/button_pattern"
                android:gravity="center"
                android:scaleType="centerInside"
                android:text="Read Block"
                android:layout_weight="0.2" />

            <Button
                android:id="@+id/btnClose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/button_pattern"
                android:gravity="center"
                android:scaleType="centerInside"
                android:text="Close Device"
                android:layout_weight="0.2" />

        </LinearLayout>

    </LinearLayout>

    <!-- Read byte -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:layout_margin="5dip"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.06"
        android:background="#505050"
        android:tag="Read block">


        <TextView
            android:id="@+id/BlockRead"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Card uid:"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ebTagUid"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="4"
            android:background="#708070"
            android:focusableInTouchMode="false"
            android:gravity="left|center_vertical" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dip"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.01"
        android:background="#505050"
        android:tag="Read block">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Block:"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ebBlockData"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="4"
            android:background="#708070"
            android:focusableInTouchMode="false"
            android:gravity="left|center_vertical" />
    </LinearLayout>

    <!-- Write byte -->

</LinearLayout>